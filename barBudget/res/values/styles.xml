<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FormFieldLabel" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="FormField" parent="android:Widget.Holo.Light.EditText">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="LightTextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="DarkTextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

</resources>